<style type='text/css'>
div#content_container{
left: 0%;
top: 3%;
width: 100%;
height: 94%;
background-color: none;
border-top: none;
border-bottom: none;
}
div#content{
padding: 0% 5%;
}
div#scroller{
left: -8%;
top: 5%;
width: 6%;
height: 6%;
}
</style>

<div id="content_container">
  <div id="content">
  	<div id="content_text">
  
  	  <h3 class="flexi120"><%= article.publisher %></h3>
		<p class="flexi50">
		<% unless article.author.blank? -%>by <%= article.author -%><% end -%><% unless article.author.blank? || article.publish_date.blank? -%>, <% end -%>
		<% unless article.publish_date.blank? -%><%= article.publish_date.to_date.to_formatted_s(:rfc822) -%><% end -%>
		</p>
  	  
  	  <p class="flexi80"><b><%= article.artists %><%= ", " unless article.venue.blank? %><%= article.venue %></b></p>
  	  
  	  <div id="articleContent">
  	  	<%= article.content %>
  	  </div>
  	
  	</div>
  </div>
</div>
<div id="scroller">
	<img id="scroll_up"
		 src="/images/playing/arrow_up.png" 
		 alt="scroll up" 
		 onmouseover="leonid.scrollText.move(1,-2,20,1)" 
		 onmouseout="leonid.scrollText.move(0);" />
	<img id="scroll_down"
		 src="/images/playing/arrow_down.png" 
	 	 alt="scroll down" 
		 onmouseover="leonid.scrollText.move(1,2,20,1)" 
		 onmouseout="leonid.scrollText.move(0);" />
</div>

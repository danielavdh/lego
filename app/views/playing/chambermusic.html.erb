<style type='text/css'>
h3{color: white;}
div#content_container{
left: 0%;
top: 70%;
width: 100%;
height: 30%;
background-color: #231b14;
border-top: 12px solid #231b14;
border-bottom: 10px solid #231b14;
}
div#content{
padding: 0% 5%;
}
div#scroller{
left: 2%;
top: 73%;
}
div#current_projects{
width: 30%;
float: left;
margin: 1% 3% 2% 0%;
background-color: #491802;
border: 2px ridge #491802;
}
</style>
<div id="chambermusicTitle"><h3 class="flexi100"><%= I18n.t("playing.chambermusic.title") %></h3>
</div>

<div id="content_container">
	<div id="content">

		<% unless @concerts.blank? %>
		<div id="current_projects">

			<h3 class="flexi100"><%= @nextConcert %></h3>
				<% @concerts.each do  |c| %>
					<p class="flexi80">
					   <a href="<%= c.line_4 %>"
						  class="chambermusic_text"
					      target="_blank">
					<%= c.start_date.to_date.to_s(:short) + " " + c.start_date.year.to_s %>, <%= c.line_1 %>
					<% unless c.line_2.blank? %>
					<br /><%= c.line_2 %>
					<% end %>
					<% unless c.line_3.blank? %>
					<br /><%= c.line_3 %>
					<% end %>
					</a></p>
				<% end %>

		</div>
		<% end %>

	<div id="quote1">
	<%= I18n.t("playing.chambermusic.quote1") %>
	</div>
	
		<div id="content_text">
		<%= I18n.t("playing.chambermusic.text") %>
		</div>

	

	</div>
</div>
<div id="scroller">
	<img id="scroll_up"
		 src="/images/playing/arrow_up_l.png" 
		 alt="scroll up" 
		 onmouseover="leonid.scrollText.move(1,-2,20,1)" 
		 onmouseout="leonid.scrollText.move(0);" />
	<img id="scroll_down"
		 src="/images/playing/arrow_down_l.png" 
	 	 alt="scroll down" 
		 onmouseover="leonid.scrollText.move(1,2,20,1)" 
		 onmouseout="leonid.scrollText.move(0);" />
</div>
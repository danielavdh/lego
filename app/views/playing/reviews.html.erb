<style type="text/css">
body {
background-color: #dddddd;
}
div#content_container{
left: 0%;
top: 3%;
width: 100%;
height: 94%;
background-color: none;
border-top: none;
border-bottom: none;
}
div#content{
padding: 0% 5%;
}
</style>

<div id="reviewsTitle">
	
	<% @articles.each do |a| %>
	<% puts a.publish_date.class %>
		<h3 class="flexi120"
			onclick="leonid.scrollText.showArticle('<%= a.id %>');"><%= a.publisher %></h3>
		<p class="flexi33"><%= a.publish_date.to_formatted_s(:month_and_year)%></p>
	<% end %>

</div>

<div id="scrollBlanket"
	 style="display:none;">
</div>
<div id="reviewsContent">
	<div id="content_container">
	  <div id="content">
  	  </div>
    </div>
</div>
<div id="scroller"
	 style="left:59%; display:none;">
	<img id="scroll_up"
		 src="/images/playing/arrow_up.png" 
		 alt="scroll up" 
		 onmouseover="leonid.scrollText.move(1,-2,20,1)" 
		 onmouseout="leonid.scrollText.move(0);" />
	<img id="scroll_down"
		 src="/images/playing/arrow_down.png" 
	 	 alt="scroll down" 
		 onmouseover="leonid.scrollText.move(1,2,20,1)" 
		 onmouseout="leonid.scrollText.move(0);" />
</div>
